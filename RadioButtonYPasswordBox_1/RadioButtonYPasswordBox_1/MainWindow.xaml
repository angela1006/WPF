<Window x:Class="RadioButtonYPasswordBox_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pregunta tipo test" Height="300" Width="400">

    <StackPanel Margin="10">
        <Label FontWeight="Bold">¿Cuál es el lenguaje de programación?</Label>

        <RadioButton x:Name="rb1" GroupName="ready">Ruido</RadioButton>
        <RadioButton x:Name="rb2" GroupName="ready">Java</RadioButton>
        <!-- CORRECTA -->
        <RadioButton x:Name="rb3" GroupName="ready">Remar</RadioButton>
        <RadioButton x:Name="rb4" GroupName="ready">Topo</RadioButton>

        <Button Height="30" Width="100" x:Name="btnCorregir" 
                HorizontalAlignment="Left" Margin="10"
                Click="btnCorregir_Click">
                Corregir
        </Button>
    </StackPanel>
</Window>
