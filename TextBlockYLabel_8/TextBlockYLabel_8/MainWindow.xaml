<Window x:Class="TextBlockYLabel_8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextBlockYLabel_8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock FontSize="16" TextWrapping="Wrap">
            <Span Foreground="Blue" FontWeight="Bold">
                <Run Text="Este es un ejemplo de cómo "/>
                <Run Text="ejemplo" Foreground="Brown" />
                <Run Text="de cómo "/>
                <Run Text="Span " Foreground="Green"/>
                <Run Text="permite incluir diferentes elementos, como un "/>
                <Hyperlink NavigateUri="https://wpf-tutorial.com/" RequestNavigate="Hyperlink_RequestNavigate">
                    enlace
                </Hyperlink>
                <Run Text=". "/>
            </Span>
            
            <LineBreak/>
            <Run Text="Run " Foreground="Purple" />
            <Run Text="solo aplica estilo a su propio texto." Foreground="Black" />
        </TextBlock>
    </Grid>
</Window>
