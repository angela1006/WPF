<Window x:Class="ComBox_Tooltip_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComBox_Tooltip_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Elige un color:" FontWeight="Bold"/>
            <ComboBox x:Name="cbColores" 
                      Width="200"
                      SelectionChanged="cbColores_SelectionChanged">
                <ComboBoxItem Content="Rojo"  Tag="Rojo: Color de alerta" />
                <ComboBoxItem Content="Verde" Tag="Verde: Color de calma" />
                <ComboBoxItem Content="Azul"  Tag="Azul: Color del cielo" />
            </ComboBox>
            <TextBlock x:Name="txtDescripcion"
                       Margin="0,20,0,0"
                       FontSize="16"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
