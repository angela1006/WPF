<Window x:Class="DataBindingYListBox_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="200" Width="400">
	<StackPanel Margin="20">
		<TextBox Width="200"
                 Text="{Binding TextoUsuario, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
		<Button Width="200"
                Margin="0 10 0 0"
                Content="{Binding TextoUsuario}" />
	</StackPanel>
</Window>
