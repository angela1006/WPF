<Window x:Class="RadioButtonYPasswordBox_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioButtonYPasswordBox_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <Label FontSize="16" FontWeight="Bold">Seleccione método de pago:</Label>
        <RadioButton x:Name="rbTarjeta" GroupName="pago" Margin="5">Tarjeta de Crédito</RadioButton>
        <RadioButton x:Name="rbPayPal" GroupName="pago" Margin="5">PayPal</RadioButton>
        <RadioButton x:Name="rbTransferencia" GroupName="pago" Margin="5">Transferencia</RadioButton>
        <Label Margin="10 20 0 5">Contraseña para confirmar:</Label>
        <PasswordBox x:Name="txtPassword" Width="200"/>
        <Button Content="Realizar pago" Width="120" Height="30"
                Margin="0,20,0,0"
                HorizontalAlignment="Left"
                Click="btnPagar_Click"/>
    </StackPanel>
</Window>
