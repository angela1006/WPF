<Window x:Class="ComBox_Tooltip_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComBox_Tooltip_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <TextBlock Text="Selecciona una categoría: " 
                       VerticalAlignment="Center" 
                       FontSize="14"/>
            <ComboBox x:Name="cbCategorias" 
                      Width="150" 
                      SelectedIndex="0"
                      VerticalContentAlignment="Center">
                <ComboBoxItem Content="Categoría A"/>
                <ComboBoxItem Content="Categoría B"/>
                <ComboBoxItem Content="Categoría C"/>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,40">
            <Button Content="Acción 1" 
                    Width="120" Height="40" Margin="10"
                    ToolTip="Este botón ejecuta la Acción número 1"
                    Click="Button_Click"/>
            <Button Content="Acción 2" 
                    Width="120" Height="40" Margin="10"
                    ToolTip="Haz clic aquí para la segunda acción"
                    Click="Button_Click"/>
            <Button Content="Acción 3" 
                    Width="120" Height="40" Margin="10"
                    ToolTip="Ejecutar la tercera y última acción"
                    Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
