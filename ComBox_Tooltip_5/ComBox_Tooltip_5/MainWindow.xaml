<Window x:Class="ComBox_Tooltip_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComBox_Tooltip_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Por favor, introduce tu edad:" 
                   FontWeight="Bold"/>
            <TextBox x:Name="txtEdad" 
                     Width="100" 
                     Height="30"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     ToolTip="Introduce tu edad (solo números)"
                     LostFocus="txtEdad_LostFocus"/>
            <Button Content="Siguiente paso" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
