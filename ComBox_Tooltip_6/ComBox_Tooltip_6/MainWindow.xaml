<Window x:Class="ComBox_Tooltip_6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComBox_Tooltip_6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Selecciona un tema:" FontWeight="Bold"/>
            <ComboBox x:Name="comboTemas" 
                      Width="200" 
                      Height="30" 
                      SelectionChanged="comboTemas_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Nombre}" 
                                   ToolTip="{Binding Descripcion}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Separator Margin="0,20,0,20" Visibility="Hidden"/>
            <TextBlock x:Name="txtEjemplo" 
                       Text="Ejemplo de texto" 
                       FontSize="16" 
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
