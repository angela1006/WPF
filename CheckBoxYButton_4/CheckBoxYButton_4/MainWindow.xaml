<Window x:Class="CheckBoxYButton_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckBoxYButton_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
        <TextBox Name="txtNombre"
                 Width="200"
                 FontSize="16"
                 HorizontalAlignment="Center"
                 Margin="0 0 0 20"/>
        <Button Name="botonSaludar"
                Padding="10"
                Click="btnSaludar_Click">

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="saludo" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
    </StackPanel>
</Window>
