<Window x:Class="WPFBasico_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBasico_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button  VerticalAlignment="Top" HorizontalAlignment="Left" Height="25"  Width="50" Click="buttonClick">
            <Button.Content>Boton 1</Button.Content>
        </Button>
        
        <Button  VerticalAlignment="Top" HorizontalAlignment="Center" Height="25"  Width="50" Click="buttonClick">
            <Button.Content>Boton 2</Button.Content>
        </Button>
        
        <Button  VerticalAlignment="Top" HorizontalAlignment="Right" Height="25"  Width="50" Click="buttonClick">
            <Button.Content>Boton 3</Button.Content>
        </Button>
        
        <Button  VerticalAlignment="Center" HorizontalAlignment="Left" Height="25"  Width="50" Click="buttonClick">
            <Button.Content>Boton 4</Button.Content>
        </Button>

        <Button  VerticalAlignment="Center" HorizontalAlignment="Center" Height="25"  Width="50" Click="buttonClick">
            <Button.Content>Boton 5</Button.Content>
        </Button>
    </Grid>
</Window>
