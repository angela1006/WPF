<Window x:Class="RadioButtonYPasswordBox_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioButtonYPasswordBox_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <Label FontWeight="Bold" FontSize="14">Seleccione nivel de seguridad:</Label>
        <RadioButton x:Name="rbBajo"  GroupName="seguridad" Margin="5">Bajo</RadioButton>
        <RadioButton x:Name="rbMedio" GroupName="seguridad" Margin="5">Medio</RadioButton>
        <RadioButton x:Name="rbAlto"  GroupName="seguridad" Margin="5">Alto</RadioButton>
        <Label Margin="10 20 0 5">Contraseña:</Label>
        <PasswordBox x:Name="txtPassword" Width="200"/>
        <Button Content="Aceptar" Width="100" Height="30"
                Margin="0,20,0,0"
                HorizontalAlignment="Left"
                Click="btnAceptar_Click"/>
    </StackPanel>
</Window>
