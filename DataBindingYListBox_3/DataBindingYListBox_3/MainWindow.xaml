<Window x:Class="DataBindingYListBox_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBindingYListBox_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox Name="textoUsuarioTextBox" Text="{Binding TextoUsuario,
            UpdateSourceTrigger=PropertyChanged}" Margin="10" Width="200"/>
        <Button Content="{Binding TextoUsuario}" Click="Button_Click" Margin="10"
                Width="200"/>
    </StackPanel>
</Window>
