<Window x:Class="ComBox_Tooltip_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComBox_Tooltip_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="Selecciona una fruta: " 
                           VerticalAlignment="Center" 
                           FontSize="14"/>
                <ComboBox x:Name="cbFrutas" Width="150" SelectedIndex="0">
                    <ComboBoxItem Content="Manzana"/>
                    <ComboBoxItem Content="Naranja"/>
                    <ComboBoxItem Content="Plátano"/>
                </ComboBox>
            </StackPanel>
            <Button Content="Confirmar selección" 
                    Width="200" 
                    Height="50"
                    FontSize="14"
                    Click="btnConfirmar_Click"/>
        </StackPanel>
    </Grid>
</Window>
