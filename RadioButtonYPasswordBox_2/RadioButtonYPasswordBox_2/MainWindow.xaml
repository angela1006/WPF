<Window x:Class="RadioButtonYPasswordBox_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioButtonYPasswordBox_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <Label FontWeight="Bold" FontSize="16">¿Cuál es el lenguaje de programación?</Label>
        <RadioButton x:Name="rb1" GroupName="ready" Margin="5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Ruido" VerticalAlignment="Center"/>
            </StackPanel>
        </RadioButton>
        <RadioButton x:Name="rb2" GroupName="ready" Margin="5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Java" VerticalAlignment="Center"/>
            </StackPanel>
        </RadioButton>
        <RadioButton x:Name="rb3" GroupName="ready" Margin="5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Remar" VerticalAlignment="Center"/>
            </StackPanel>
        </RadioButton>
        <RadioButton x:Name="rb4" GroupName="ready" Margin="5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Topo" VerticalAlignment="Center"/>
            </StackPanel>
        </RadioButton>
        <Button Height="30" Width="100" x:Name="btnCorregir"
                HorizontalAlignment="Left" Margin="10" Click="btnCorregir_Click">
            Corregir
        </Button>
    </StackPanel>
</Window>
