<Window x:Class="ComBox_Tooltip_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComBox_Tooltip_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Selecciona un animal:" FontWeight="Bold" Margin="0,0,0,10"/>
            <ComboBox x:Name="cbAnimales" 
                      Width="200" 
                      Height="50"
                      SelectionChanged="cbAnimales_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding ImagenRuta}" 
                                   Width="32" 
                                   Height="32" 
                                   Margin="0,0,10,0"/>

                            <TextBlock Text="{Binding Nombre}" 
                                       VerticalAlignment="Center" 
                                       FontSize="14"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
    </Grid>
</Window>