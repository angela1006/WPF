<Window x:Class="CheckBoxYButton_6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckBoxYButton_6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <StackPanel Margin="20">
        <TextBlock Name="txtBloque" FontSize="18" TextWrapping="Wrap">
            <Span FontWeight="Bold" Foreground="Blue">
                Este es un texto en negrita,
            </Span>
            <Run FontStyle="Italic" Foreground="Red" Text=" y esta parte está en cursiva." />
        </TextBlock>
        <CheckBox Name="chkAlternativo"
                  Content="Mostrar texto alternativo"
                  Margin="0,20,0,10"
                  FontSize="14"/>
        <Button Name="btnActualizar"
                Content="Actualizar texto"
                Width="150"
                Height="35"
                Click="btnActualizar_Click"/>

    </StackPanel>
</Window>
